{
  "name": "zerotwo-ui",
  "productName": "ZeroTwo",
  "version": "0.7.0-20180825b",
  "author": "NicoAiko <nicochan95.anime@gmail.com>",
  "description": "Taiga alternative",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/NicoAiko/zerotwo"
  },
  "bugs": {
    "url": "https://github.com/NicoAiko/zerotwo/issues"
  },
  "build": {
    "productName": "ZeroTwo",
    "appId": "org.nicoaiko.zerotwo",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/electron/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/icons/ZeroTwo.icns"
    },
    "win": {
      "icon": "build/icons/ZeroTwo.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icons",
      "target": [
        "AppImage",
        "deb",
        "snap",
        "tar.gz"
      ]
    }
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bluebird": "^3.5.1",
    "dotenv": "^6.0.0",
    "dotenv-webpack": "^1.5.7",
    "electron-oauth2": "^3.0.0",
    "env-cmd": "^8.0.2",
    "he": "^1.1.1",
    "jquery": "^3.3.1",
    "jsonwebtoken": "^8.3.0",
    "localforage": "^1.7.2",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "qs": "^6.5.2",
    "vue": "^2.5.17",
    "vue-electron": "^1.0.6",
    "vue-i18n": "^7.8.1",
    "vue-moment": "^4.0.0-0",
    "vue-notification": "^1.3.13",
    "vue-router": "^3.0.1",
    "vuelidate": "^0.7.4",
    "vuetify": "^1.2.0",
    "vuex": "^3.0.1",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@kazupon/vue-i18n-loader": "^0.3.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "copy-webpack-plugin": "^4.5.2",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "^2.0.8",
    "electron-builder": "^20.28.2",
    "electron-debug": "^2.0.0",
    "electron-rebuild": "^1.8.2",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-html": "^4.0.5",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-vue": "^5.0.0-beta.3",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "inject-loader": "^4.0.1",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.4.2",
    "multispinner": "^0.2.1",
    "node-loader": "^0.6.0",
    "node-sass": "^4.9.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.22.1",
    "url-loader": "^1.1.1",
    "vue-devtools": "^4.1.4",
    "vue-eslint-parser": "^3.2.2",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^15.4.0",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.17.1",
    "webpack-cli": "^2.1.5",
    "webpack-dev-server": "3.1.5",
    "webpack-hot-middleware": "^2.22.3"
  },
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "npm run pack && electron-builder --publish never",
    "build:pack": "npm run pack && electron-builder --publish never",
    "build:dir": "npm run pack && electron-builder --dir",
    "build:linux": "npm run pack && electron-builder --linux",
    "build:mac": "npm run pack && electron-builder --mac",
    "build:win": "node vue-electron/build.js && electron-builder --publish never",
    "build:win-app": "npm run pack && electron-builder",
    "clean": "cross-env BUILD_TARGET=clean node vue-electron/build.js",
    "dev": "env-cmd .env cross-env NODE_ENV=development node vue-electron/dev-runner.js",
    "lint": "eslint --ext .js,.vue src",
    "lint:fix": "eslint --ext .js,.vue --fix src",
    "pack": "env-cmd .env npm run pack:main && npm run pack:renderer",
    "pack:main": "webpack --mode production --hide-modules --config vue-electron/webpack.main.config.js",
    "pack:renderer": "webpack --mode production --hide-modules --config vue-electron/webpack.renderer.config.js",
    "rebuild-electron": "./node_modules/.bin/electron-rebuild",
    "postinstall": "node_modules/.bin/electron-builder install-app-deps && npm rebuild node-sass",
    "release": "build"
  }
}
